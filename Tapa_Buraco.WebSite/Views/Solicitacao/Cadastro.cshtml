                        <li class="step-wizard-item current-item" id="step0">
                            <span class="progress-count">0</span>
                            <span class="progress-label">ABERTA</span>
                        </li>
                        <li class="step-wizard-item" id="step1">
                            <span class="progress-count">1</span>
