<div id="divDashboard">
    <div class="row" ng-controller="SolicitacaoController">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <div class="col-lg-8"></div>
                    <div class="col-lg-3">
                        <div class="input-group">
                            <input class="form-control" id="textBoxConsulSolicitacao" type="text" placeholder="Solicitante" maxlength="200">
                        </div>
                    </div>
                    <div class="col-lg-1">
                        <div class="input-group">
                            <span class="input-group-btn">
                                <button type="button" id="buttonConsultar" class="btn btn-primary">Consultar</button>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="ibox-content">
                    <div id="grid" class="grid"></div>
                </div>
            </div>
        </div>
    </div>
</div>